<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.mkg_wegberg.kartenspielsammlung.MauMau_konfigurieren">

    <TextView
        android:id="@+id/tModusKonfigurierenId"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Spielmodus konfigurieren"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/bStartId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp" />


    <TextView
        android:id="@+id/tKartenanzahlId"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_alignTop="@id/tModusKonfigurierenId"
        android:layout_marginTop="70dp"
        android:text="erweitertes Kartendeck"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"/>

    <Switch
        android:id="@+id/sKartenanzahlId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignTop="@+id/tKartenanzahlId"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/tSpieleranzahlId"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_alignTop="@id/tKartenanzahlId"
        android:layout_marginTop="70dp"
        android:text="Spieleranzahl (inkl. Dir)"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"/>

    <EditText
        android:id="@+id/etSpieleranzahlId"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:inputType="number"

        android:text="3"
        android:layout_alignTop="@+id/tSpieleranzahlId"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"/>

</RelativeLayout>
